    <!--   根据  Appid 查询软件历史版本信息  -->
<select id="selectHistrory" resultMap="HistroyMap">
SELECT h.id id,
h.appid appid,
h.appName appName,
h.APKName APKName,
h.appSize appSize,
u.`userName` kaifaze,
z.tai2  zhuantai,
h.bbH bbH,
h.appDetail appDetail,
h.LuJin LuJin
FROM  `histroyrj` h,`user` u ,`zhuantai2` z
WHERE
        h.kaifazId=u.id
  AND   h.zhantai=z.tai1Id
  AND	h.zhantai=z.tai1Id
  AND   h.appid=#{id}
    </select>
